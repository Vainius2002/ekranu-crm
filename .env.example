# Environment Configuration for Ekranu CRM
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production

# Database
SQLALCHEMY_DATABASE_URI=sqlite:///ekranu_crm.db

# API Configuration for inter-service communication
# These use localhost since all services run on the same server
PROJECTS_CRM_URL=http://localhost:5002
PROJECTS_CRM_API_KEY=projects-crm-api-key-change-in-production

AGENCY_CRM_URL=http://localhost:5001
AGENCY_CRM_API_KEY=my-agency-crm-api-key-change-in-production

# Port Configuration
PORT=5003
HOST=0.0.0.0